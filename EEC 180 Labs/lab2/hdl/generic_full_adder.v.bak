#(parameter N = 8)
(
	input [N - 1:0] a, b,
	input carry_in,
	output [N - 1:0] sum,
	output carry_out,
	output overflow_check
);

	wire [N:0] carry_wire;
	
	assign carry_wire[0] = carry_in;

	genvar i;
	
	generate
		for (i = 0; i < N; i = i + 1)
			begin : full_adder_block
				full_adder full_adder_i
				(
					 .a(a[i]),
					 .b(b[i]),
					 .carry_out(carry_wire[i + 1]),
					 .sum(sum[i]),
					 .carry_in(carry_wire[i])
				 );
			end
	endgenerate
	
	assign carry_out = carry_wire[N];
	assign overflow_check = carry_wire[N] ^ carry_wire[N - 1];